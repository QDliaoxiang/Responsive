@charset 'utf-8';

/*header-nav  start*/
.header-nav{
	height:70px;
	background-color:#333;
	line-height:70px;
	color:#fff;
	font-size:16px;
	}

.header-nav-content{
	max-width:1200px;
	height:100%;
	margin:auto;
	}

#logo{
	width:110px;
	height:100%;
	}
#logo>a{
	display:block;
	height:100%;
	background:url('../images/30.png') no-repeat left center;
	}
.header-nav-content .left{
	left:40px;
	top:0;
	}
.header-nav-content .middle{
	height:70px;
	margin-left:200px;
	margin-right:200px;
	}
.header-nav-content .right{
	right:40px;
	top:0;
	letter-spacing:28px;
	}
.header-nav-content .right i{
		font-size:20px;
	}
.header-nav-content .middle li{
	width:80px;
	}
.header-nav-content .middle li.on{
	overflow:hidden;
}
.header-nav-content .middle li.on:after{
	content:'';
	position:absolute;
	top:30px;
	right:26px;
	width:5px;
	height:5px;
	border-left:1px solid #fff;
	border-bottom:1px solid #fff;
	transform:rotate(-45deg);
	}
.header-nav-content .middle li.on ul{
	width:110px;
	height:140px;
	background-color:#333;
	margin-top:-4px;
	line-height:48px;
	text-indent:15px;
	box-shadow:0 0 3px 0 black;
	opacity:0;
	z-index:2;
	transition:.5s;
	}
.header-nav-content .middle li.on:hover ul{
	opacity:1;
	}
.hide{
		display:none;
		left:0;
		top:0;
		margin-left:40px;
		font-weight:600;
		font-size:16px;
		}
/*header-nav end*/

/*header-banner start*/
.header-banner video{
	width:100%;
	height:100%;
	border:none;
	object-fit:cover;
	background-image:linear-gradient(rgba(0,0,0,.5) 0%,rgba(0,0,0,.5) 100%);
	z-index:-1;
	}
.header-banner{
	overflow:hidden;
	height:845px;
	background-color:rgba(0,0,0,.5);
	}
.header-banner .introduce{
	top:190px;
	right:10%;
	width:400px;
	height:400px;
	text-align:center;
	color:#bfbfbf;
	}
.header-banner .introduce h2{
	line-height:54px;
	font-size:40px;
	}
.header-banner .introduce p{
	margin-top:80px;
	line-height:36px;
	font-size:22px;
	letter-spacing:5px;
	}
.header-banner .introduce a{
	display:block;
	width:280px;
	height:60px;
	border:1px solid #fff;
	left:0;
	right:0;
	margin:auto;
	margin-top:50px;
	font-size:25px;
	text-align:center;
	line-height:60px;
	letter-spacing:8px;
	transition:background-color .5s;
	}
.header-banner .introduce a:hover{
	background-color:#fff;
	color:#000;
	}
.header-banner-hide{
	display:none;
	}
.header-banner>a{
	width:20px;
	height:20px;
	border-left:5px solid #fff;
	border-bottom:5px solid #fff;
	left:0;
	right:0;
	bottom:120px;
	margin:auto;
	transform:rotate(-45deg);
	border-radius:3px;
	}
/*header-banner end*/
